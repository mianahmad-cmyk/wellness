    <div class="d-flex" id="wrapper">
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white">Admin Panel</div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('dashboard')">
                    <i class="bi bi-house-door"></i> Dashboard
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('user-management')">
                    <i class="bi bi-person"></i> User Management
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('category-management')">
                    <i class="bi bi-person"></i> Manage Categories
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('services-management')">
                    <i class="bi bi-briefcase"></i> Seller Management
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('seller-management')">
                    <i class="bi bi-box"></i> Seller & Product Management
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('orders-management')">
                    <i class="bi bi-basket"></i> Doctor Managnment
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('notifications-management')">
                    <i class="bi bi-bell"></i> Notifications & Alerts
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('doctor-requests')">
                    <i class="bi bi-plus-circle"></i> Doctor Requests
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('fooders')">
                    <i class="bi bi-food"></i> Fooder Management
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('feedback-support')">
                    <i class="bi bi-chat-dots"></i> Feedback & Support
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white" onclick="showContent('settings')">
                    <i class="bi bi-gear"></i> Settings
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="ty">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom" style="margin: -1.5rem;" >
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="bi bi-list"></i> Menu
                </button>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <!-- <input class="form-control me-2 search-bar" type="search" id="search" placeholder="Search" aria-label="Search"> -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="ahmadprofile.ejs" id="profile-link"><i class="bi bi-person-circle"></i> Profile</a>
                          </li>
                          
                          <!-- Admin Profile Modal -->
                          <div id="adminProfileModal" style="display: none;">
                            <h3>Admin Profile</h3>
                            <p><strong>Name:</strong> <span id="adminName"></span></p>
                            <p><strong>Email:</strong> <span id="adminEmail"></span></p>
                            <!-- Add more fields as needed -->
                          </div>
                       
                        <!-- <li class="nav-item">
                            <a class="nav-link" href="addanimalform"> Add Animals</a>
                        </li> -->
                       
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <!-- Default view -->
                <div id="dashboard-content" class="module-content">
                    <h1 class="mt-4">Admin Dashboard</h1>
                    <p>Welcome to your admin panel. This is where you can manage all aspects of the website.</p>
                    <div class="row">
                        <div class="col-lg-4 col-md-6">
                            <div class="card bg-primary text-white mb-4">
                                <div class="card-body">User Management</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#" onclick="showContent('user-management')">View Details</a>
                                    <div class="small text-white"><i class="bi bi-chevron-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="card bg-warning text-white mb-4">
                                <div class="card-body">Seller Management</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#" onclick="showContent('services-management')">View Details</a>
                                    <div class="small text-white"><i class="bi bi-chevron-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="card bg-success text-white mb-4">
                                <div class="card-body">Seller & Product Management</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#" onclick="showContent('seller-management')">View Details</a>
                                    <div class="small text-white"><i class="bi bi-chevron-right"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Module contents -->
                <div id="user-management-content" class="module-content" style="display: none;">
                    <h1 class="mt-4">User Management</h1>
                    <p>Manage users by adding, removing, and updating user information.</p>
                        <!-- <a href="/addcategoryform"><button class="btn btn-primary">Add Categories</button></a> -->
                        <table class="table mt-4">
                            <thead>
                              <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Password</th>
                                <th scope="col">Actions</th> <!-- New column for actions -->
                              </tr>
                            </thead>
                            <tbody>
                              <% if (users.length > 0) { %>
                                <% users.forEach(user => { %>
                                  <tr>
                                    <td><%= user.name %></td> <!-- Render user name dynamically -->
                                    <td><%= user.email %></td>
                                    <td><%= user.password %></td>
                                    <td>
                                      <!-- Delete Button -->
                                      <button class="btn btn-danger" onclick="deleteUser('<%= user._id %>')">Delete</button>
                                    </td>
                                  </tr>
                                <% }) %>
                              <% } else { %>
                                <tr>
                                  <td colspan="4">No users found.</td> <!-- Adjusted colspan for new column -->
                                </tr>
                              <% } %>
                            </tbody>
                          </table>
                          
                        
                    </div>
                </div>
               <!-- views/admindashboard.ejs -->
<div id="category-management-content" class="module-content" style="display: none;">
