        <% } %>
    </ul>
    
</div>


                <div id="services-management-content" class="module-content" style="display: none;">
                    <h1 class="mt-4">Seller Management</h1>
                    <p>Manage services including adding, updating, and removing services provided.</p>
                    <table class="table mt-4">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (sellers.length > 0) { %>
                                <% sellers.forEach(seller => { %>
                                    <tr>
                                        <td><%= seller.username %></td>
                                        <td><%= seller.email %></td>
                                        <td><%= seller.password %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3">No sellers found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    
                </div>

                <div id="seller-management-content" class="module-content" style="display: none;">
