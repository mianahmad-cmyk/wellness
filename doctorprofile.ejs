<style>
    .doctor-profile {
  max-width: 600px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #f9f9f9;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.doctor-profile-header img {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 3px solid #3a87ad;
  margin-bottom: 15px;
}

.doctor-profile-details h2 {
  font-size: 1.8em;
  color: #333;
  margin-bottom: 10px;
}

.doctor-profile-details p {
  font-size: 1em;
  color: #555;
  margin: 5px 0;
}

.doctor-profile-details p strong {
  color: #3a87ad;
}

.contact-button {
  margin-top: 15px;
}

.contact-button .btn {
  background-color: #3a87ad;
  color: white;
  padding: 10px 20px;
  font-size: 1em;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
}

.contact-button .btn:hover {
  background-color: #337ab7;
}

.login-prompt {
  font-size: 0.9em;
  color: #777;
}

</style>
<link rel="icon" type="image/x-icon" href="/logo.jpeg" style="border-radius: 50%;">
<article class="doctor-profile">
    <div class="doctor-profile-header">
      <% if (Seller.image && Seller.image.data) { %>
        <img 
          src="data:<%= Seller.image.contentType %>;base64,<%= Seller.image.data.toString('base64') %>" 
          alt="Dr. <%= Seller.username %>">
      <% } else { %>
        <img src="/default-image.jpg" alt="No profile picture available">
      <% } %>
    </div>
  
    <div class="doctor-profile-details">
      <h2> <%= Seller.name %></h2>
      <p><strong>Specialty:</strong> <%= Seller.specialty %>Animal Seller </p>
      <p><strong>Experience:</strong> <%= Seller.experience %> 10 years</p>
      
      <p><strong>Available Hours:</strong> <%= Seller.availableHours %> Available</p>
      <p><strong>Contact:</strong> <%= Seller.phone %> | <%= Seller.email %></p>
      <% if (Seller.consultationFee) { %>
        <p><strong>Address</strong> $<%= Seller.consultationFee %></p>
      <% } else { %>
        <p><strong>Address:</strong> Not available</p>
      <% } %>
    </div>
    <a href="/">
      <button style="background-color:rgb(3, 170, 3) ; border: none;">
        Go Back
       </button>
    </a>
   
    <div class="contact-button">
     
    </div>
  </article>