    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f7f7f7;
        }

        .navbar {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
        .navbar-brand img {
            height: 50px;
            border-radius: 50%;
        }

        .nav-link {
            color: #03aa03 !important;
            font-weight: bold;
        }

        .intro {
            padding: 4em 0;
            background: #fff;
            color: #333;
        }

        .intro h1 {
            color: #03aa03;
            font-size: 2.5em;
        }

        .intro h2 {
            font-weight: bold;
            color: #555;
        }

        .intro p {
            font-size: 1.1em;
            color: #666;
        }

        .find-doctor-btn {
            background-color: #03aa03;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            margin-top: 15px;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .find-doctor-btn:hover {
            background-color: #028a02;
        }

        .services {
            padding: 4em 0;
            background: #fff;
        }

        .service-card {
            background: #fafafa;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-card img {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 3em 0;
        }

        .footer h5 {
            color: #fff;
            margin-bottom: 1.2rem;
        }

        .footer a {
            color: #ccc;
            text-decoration: none;
            font-weight: 500;
        }

        .footer a:hover {
            color: #fff;
        }
        .service-card img {
        width: 100%;           /* Full width inside the card */
        height: 200px;         /* Set a fixed height for uniformity */
        object-fit: cover;     /* Crop the image to fit within the specified dimensions */
        border-radius: 8px; 
        }
